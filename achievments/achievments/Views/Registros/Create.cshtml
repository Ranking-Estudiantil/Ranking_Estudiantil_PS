@model achievments.Models.Registros

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Registros</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="achievmentID" class="control-label"></label>
               <select asp-for="achievmentID" class="form-control" asp-items="ViewBag.achievmentID"></select>
            </div>
             <div class="rating">
  
              <input type="radio" name="rating" value="1" id="5"><label for="5">☆</label>
              <input type="radio" name="rating" value="0.80" id="4"><label for="4">☆</label>
              <input type="radio" name="rating" value="0.60" id="3"><label for="3">☆</label>
              <input type="radio" name="rating" value="0.40" id="2"><label for="2">☆</label>
              <input type="radio" name="rating" value="0.20" id="1"><label for="1">☆</label>
            
            </div>
            <script>
        const btn = document.querySelector('#btn');        
        const radioButtons = document.querySelectorAll('input[name="rating"]');
        btn.addEventListener("click", () => {
            let rate;
            var punctuation;
            for (const radioButton of radioButtons) {
                if (radioButton.checked) {
                    rate = radioButton.value;
                    punctuation = rate* 400;
                    document.getElementById('scoreUno').innerHTML = punctuation;
                    break;
                }
            }
            // show the output:
           
        });
    </script>
             <div class="form-group" style="  visibility:collapse;" >
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score"  value=400 class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="btn" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
