@model IEnumerable<Ranking_Estudiantil.Models.Student>

@{
    ViewData["Title"] = "Index";
}
<header>
    <!-- header inner -->
    <div class="header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
                    <div class="full">
                        <div class="center-desk">
                            <div class="logo">
                                <img src="../Images/logoRanking.png" alt="#" />
                                <b>RANKING ESTUDIANTIL</b>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
                    <nav class="navigation navbar navbar-expand-md navbar-dark ">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</header>

<body style="background-color: #232323;">
    <h1 style="color:white;">Ranking</h1>

    <table class="table table-bordered" style="background-color: #232323; color:white; border: 4px solid;">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.PeronStud.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PeronStud.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PeronStud.SecondLastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.career.CareerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Score)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PeronStud.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PeronStud.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PeronStud.SecondLastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.career.CareerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Score)
                    </td>
                    <td>
                        @if (item.Score >= 0 && item.Score <= 100)
                        {
                            <img src="~/Images/BronzeJR.png" />
                        }
                        else if (item.Score >= 100 && item.Score <= 200)
                        {
                            <img src="~/Images/BronzeMidd.png" />
                        }
                        else if (item.Score >= 200 && item.Score <= 300)
                        {
                            <img src="~/Images/BronzeSenior.png" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

