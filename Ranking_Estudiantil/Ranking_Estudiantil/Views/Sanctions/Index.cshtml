@model IEnumerable<Ranking_Estudiantil.Models.Sanctions>

@{
    ViewData["Title"] = "Index";
}


<header>
    <!-- header inner -->
    <div class="header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
                    <div class="full">
                        <div class="center-desk">
                            <div class="logo">
                                <img src="/Images//logoRanking.png"   />
                                <b  >Sanciones</b>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</header>



<body style="background-color: #232323;">
    <table class="table-fill" >
        <thead>
            <tr>
                <th class="text-left">
                    Sancion
                </th>
                <th class="text-left">
                    Cantidad de puntos perdidos
                </th>
              
               
            </tr>
        </thead>
        <tbody class="table-hover">
            @foreach (var item in Model)
            {
                <tr>
                
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.punctuation)
            </td>
                   
                   
                    
                </tr>
            }
        </tbody>
    </table>
    <div style="padding:50px">
        <a    href="/Students/Index">Regresar</a>
    </div>
</body>





