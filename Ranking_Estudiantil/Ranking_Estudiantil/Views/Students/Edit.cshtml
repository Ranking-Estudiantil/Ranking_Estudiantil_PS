@model Ranking_Estudiantil.Models.Student

@{
    ViewData["Title"] = "Edit";
}
<body style="background-color: #232323;">
    <div align="center">
        

        <h1 style="color:white;">Proyectos</h1>
    </div>
    <br>
    <div align="center">
        <div class="col-md-4">
            <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PersonID" />
            <div class="form-group" hidden>
                <label asp-for="Rank" class="control-label"></label>
                <input asp-for="Rank" class="form-control" />
                <span asp-validation-for="Rank" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label  class="control-label">Nombre del proyecto</label>
                <input name="nombreProyecto" class="form-control" />
                
            </div>
            <div >
                <label  class="control-label">Seleccione tipo de logro</label>
               <select name="achievment" >
                  <option value="Logro Academico">Logro Academico</option>
                  <option value="Logro como persona">Logro como persona</option>
                  
                  
                </select>
            </div>
            <div class="form-group">
                 <label  class="control-label">Califica el proyecto mediante la cantidad de estrellas</label>
            <label  class="control-label">La calificacion es de 1 a 5 estrellas 1=regular 5=excelente</label>
            </div>

            <div class="rating">
           
              <input type="radio" name="rating" value=1 id="5"><label for="5">☆</label>
              <input type="radio" name="rating" value=0.80 id="4"><label for="4">☆</label>
              <input type="radio" name="rating" value=0.60 id="3"><label for="3">☆</label>
              <input type="radio" name="rating" value=0.40 id="2"><label for="2">☆</label>
              <input type="radio" name="rating" value=0.20 id="1" checked><label for="1">☆</label>
            
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        </div>
        <div>
            <a   asp-action="Index">Volver a la lista</a>
        </div>
    </div>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


