@model Ranking_Estudiantil.Models.Student

@{
    ViewData["Title"] = "Edit";
}
<body style="background-color: #232323;">
    <div align="center">
        

        <h1 style="color:white;">Proyectos</h1>
    </div>
    <br>
    <div align="center">
        <div class="col-md-4">
            <form asp-action="Edit1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PersonID" />
            <div class="form-group" hidden>
                <label asp-for="Rank" class="control-label"></label>
                <input asp-for="Rank" class="form-control" />
                <span asp-validation-for="Rank" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label  class="control-label">Ingrese una descripcion</label>
                <input name="descripcionSancion" class="form-control" />
                
            </div>
            <div class="form-group">
                <label  class="control-label">Ingrese la cantidad de puntos</label>
                 <label  class="control-label">Son los puntos que se le quitaran al estudiante que cometio la sancion</label>
                <input name="puntajeSancion" type="number" class="form-control" />
                
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        </div>
        <div>
            <a asp-action="Index">Volver a la lista</a>
        </div>
    </div>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
