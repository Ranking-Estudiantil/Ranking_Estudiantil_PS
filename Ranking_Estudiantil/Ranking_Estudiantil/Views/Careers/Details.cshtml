@model Ranking_Estudiantil.Models.Career

@{
    ViewData["Title"] = "Details";
}

<body style="background-color: #232323;">
    <div>
        <div align="center">
           
            <h1 style="color:white;">Carreras</h1>
        </div>
        <br>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CareerName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CareerName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Department)
            </dt>
